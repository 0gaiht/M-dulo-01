programa
{
	
	funcao inicio()
	{
		real janeiro,fevereiro,marco,abril,media,total
		 escreva("Sua venda de Janeiro: ")
		  leia(janeiro)
		 escreva("Sua venda de Fevereiro: ")
		  leia(fevereiro)
		 escreva("Sua venda de Março: ")
		  leia(marco)
		 escreva("Sua venda de abril: ")
		  leia(abril)

		  		media = (janeiro+fevereiro+marco+abril)/4
		  		total = (janeiro+fevereiro+marco+abril)

		  	escreva("Sua média de vendas foi: " + media + " e suas vendas totais foi de: " + total)
		
	}
}
